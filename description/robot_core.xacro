<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >
<xacro:include filename="inertial_macros.xacro"/>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
<material name="black">
        <color rgba="0 0 0 1" />
    </material>
<material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">
    
    </link>
    <!-- CHASSIS LINK-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.56 0 0.225"/>
            <geometry>
                <box size="1.13 0.46 0.45 "/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.56 0 0.225"/>
            <geometry>
                <box size="1.13 0.46 0.45 "/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1" x="1.13" y="0.46" z="0.45">]
            <origin xyz="0.56 0 0.225" rpy="0 0 0"/>
        </xacro:inertial_box>

    </link>
    <gazebo reference="chassis">
        <material> Gazebo/Blue </material>
    </gazebo>


    <!-- LEFT WHEEL LINK -->
     <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.265 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
   </joint>
   <link name="left_wheel">
         <visual>
            <geometry>
                <cylinder radius="0.30" length="0.07"/>
            </geometry>
           <material name="black"/>
         </visual>
          <collision>
            <geometry>
                <cylinder radius="0.30" length="0.07"/>
            </geometry>
         </collision>
          <xacro:inertial_cylinder mass="1" length="0.07" radius="0.30">]
            <origin xyz="0 0 0" rpy="0 0 0"/>
          </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel">
        <material> Gazebo/Black </material>
    </gazebo>

 <!-- RIGHT WHEEL LINK -->
     <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.265 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
   </joint>
   <link name="right_wheel">
         <visual>
            <geometry>
                <cylinder radius="0.30" length="0.07"/>
            </geometry>
           <material name="black"/>
         </visual>
         <collision>
            <geometry>
                <cylinder radius="0.30" length="0.07"/>
            </geometry>
         </collision>
         <xacro:inertial_cylinder mass="1" length="0.07" radius="0.30">]
            <origin xyz="0 0 0" rpy="0 0 0"/>
          </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material> Gazebo/Black </material>
    </gazebo>
<!--CASTER WHEEL LINK-->
 <joint name="caste_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.9 0 0" />
        
   </joint>
<link name="caster_wheel">
         <visual>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
           <material name="black"/>
         </visual>
         <collision>
            <geometry>
                <sphere radius="0.1" />
            </geometry>
         </collision>
         <xacro:inertial_sphere mass="0.1" radius="0.10">]
            <origin xyz="0 0 0" rpy="0 0 0"/>
          </xacro:inertial_sphere>
         
    </link>
    <gazebo reference="caster_wheel">
        <material> Gazebo/Black </material>
    </gazebo>
</robot>


